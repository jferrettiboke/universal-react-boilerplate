{
  "name": "universal-react-boilerplate",
  "version": "1.0.0",
  "description": "Universal React Boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack -p --progress --profile --colors",
    "clean": "rimraf dist",
    "lint": "npm run lint:css; npm run lint:js",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:js": "eslint src/**",
    "start": "nodemon dist/server",
    "start:dev": "node server.dev",
    "test": "mocha --watch tests/helpers/.setup.js \"+(src|tests)/**/*.test.js\""
  },
  "author": "Jes√∫s Ferretti",
  "license": "MIT",
  "dependencies": {
    "express": "^4.14.0",
    "history": "^3.0.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-helmet": "^3.1.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "cross-env": "^1.0.8",
    "css-loader": "^0.23.1",
    "enzyme": "^2.4.1",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^1.5.5",
    "eslint-plugin-react": "^5.2.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "jsdom": "^9.4.4",
    "json-loader": "^0.5.4",
    "mocha": "^2.5.3",
    "nodemon": "^1.10.2",
    "postcss-loader": "^0.9.1",
    "precss": "^1.4.0",
    "react-addons-test-utils": "^15.3.1",
    "redux-devtools": "^3.3.1",
